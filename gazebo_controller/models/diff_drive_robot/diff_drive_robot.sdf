<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="diff_drive_robot">
    <static>false</static>
    
    <!-- CHASSIS LINK -->
    <link name="chassis">
      <pose>0 0 0.4375 0 0 0</pose>
      <inertial>
        <mass>15.0</mass>
        <inertia>
          <ixx>0.5</ixx><ixy>0.0</ixy><ixz>0.0</ixz>
          <iyy>0.5</iyy><iyz>0.0</iyz>
          <izz>0.5</izz>
        </inertia>
      </inertial>
      
      <collision name="chassis_collision">
        <geometry>
          <box><size>0.825 0.825 0.075</size></box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.5</mu>
              <mu2>0.5</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="chassis_visual">
        <geometry>
          <box><size>0.825 0.825 0.075</size></box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>
    
    <!-- LIDAR DOME LINK -->
    <link name="lidar_dome">
      <pose>0.3 0 0.475 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-5</ixx><ixy>0.0</ixy><ixz>0.0</ixz>
          <iyy>1e-5</iyy><iyz>0.0</iyz>
          <izz>1e-5</izz>
        </inertia>
      </inertial>
      
      <collision name="lidar_dome_collision">
        <geometry>
          <sphere><radius>0.03125</radius></sphere>
        </geometry>
      </collision>
      
      <visual name="lidar_dome_visual">
        <geometry>
          <sphere><radius>0.03125</radius></sphere>
        </geometry>
        <material>
          <ambient>0.0 1.0 0.0 1</ambient>
          <diffuse>0.0 1.0 0.0 1</diffuse>
          <specular>0.5 0.5 0.5 1</specular>
        </material>
      </visual>
    </link>

    <!-- LEFT WHEEL LINK -->
    <link name="left_wheel">
      <pose>0 0.425 0.4 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.04</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.04</iyy><iyz>0</iyz>
          <izz>0.04</izz>
        </inertia>
      </inertial>
      
      <collision name="left_wheel_collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.4</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="left_wheel_visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.4</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 1.0 1</ambient>
          <diffuse>0.0 0.0 1.0 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>

    <!-- RIGHT WHEEL LINK -->
    <link name="right_wheel">
      <pose>0 -0.425 0.4 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.04</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.04</iyy><iyz>0</iyz>
          <izz>0.04</izz>
        </inertia>
      </inertial>
      
      <collision name="right_wheel_collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.4</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="right_wheel_visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.4</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1.0 0.0 0.0 1</ambient>
          <diffuse>1.0 0.0 0.0 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>
    
    <!-- STABILIZER LINKS (Passive casters for stability) -->
    <link name="stabilizer_skid_front">
      <pose>0.35 0 0.02 0 0 0</pose>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-6</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>1e-6</iyy><iyz>0</iyz>
          <izz>1e-6</izz>
        </inertia>
      </inertial>
      
      <collision name="skid_collision_front">
        <geometry>
          <sphere><radius>0.02</radius></sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <link name="stabilizer_skid_rear">
      <pose>-0.35 0 0.02 0 0 0</pose>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-6</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>1e-6</iyy><iyz>0</iyz>
          <izz>1e-6</izz>
        </inertia>
      </inertial>
      
      <collision name="skid_collision_rear">
        <geometry>
          <sphere><radius>0.02</radius></sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <!-- JOINTS -->
    
    <joint name="lidar_dome_joint" type="fixed">
      <parent>chassis</parent>
      <child>lidar_dome</child>
    </joint>

    <joint name="left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.1</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="skid_joint_front" type="fixed">
      <parent>chassis</parent>
      <child>stabilizer_skid_front</child>
    </joint>

    <joint name="skid_joint_rear" type="fixed">
      <parent>chassis</parent>
      <child>stabilizer_skid_rear</child>
    </joint>

    <!-- PLUGINS -->

    <!-- Gazebo ROS Differential Drive Plugin -->
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
      </ros>
      
      <!-- Wheel joints -->
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      
      <!-- Kinematics -->
      <wheel_separation>0.85</wheel_separation>
      <wheel_diameter>0.8</wheel_diameter>
      
      <!-- Limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
      
      <!-- Odometry -->
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>chassis</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      
      <!-- Update rate -->
      <update_rate>50</update_rate>
      
      <!-- Odometry source (world or encoder) -->
      <odometry_source>world</odometry_source>
    </plugin>

    <!-- Gazebo ROS Joint State Publisher Plugin -->
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <namespace>/</namespace>
        <remapping>joint_states:=joint_states</remapping>
      </ros>
      <update_rate>50</update_rate>
      <joint_name>left_wheel_joint</joint_name>
      <joint_name>right_wheel_joint</joint_name>
    </plugin>
  </model>
</sdf>